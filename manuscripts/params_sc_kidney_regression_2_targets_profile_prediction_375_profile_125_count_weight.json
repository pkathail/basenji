
{
    "train": {
        "batch_size": 64,
        "shuffle_buffer": 8192,
        "optimizer": "sgd",
        "loss": "poisson_multinomial_nll",
        "learning_rate": 0.005,
        "momentum": 0.98,
        "patience": 3,
        "train_epochs_min": 3,
        "train_epochs_max": 30 ,
        "dnase_task_weight": 0.5,
        "footprint_profile_task_weight": 0.375,
        "footprint_count_task_weight": 0.125
    },
    "model": {
        "seq_length": 1344,

        "augment_rc": true,
        "augment_shift": 3,

        "activation": "gelu",
        "batch_norm": true,
        "bn_momentum": 0.90,
        
        "trunk": [
            {
                "name": "conv_block",
                "filters": 288,
                "kernel_size": 17,
                "pool_size": 3
            },
            {
                "name": "conv_tower",
                "filters_init": 288,
                "filters_mult": 1.122,
                "kernel_size": 5,
                "pool_size": 2,
                "repeat": 6
            },
            {
                "name": "conv_block",
                "filters": 256,
                "kernel_size": 1
            },
            {
                "name": "conv_block",
                "filters": 768,
                "kernel_size": 7,
                "dropout": 0.2,
                "padding": "valid" 
            }
        ],
        "head_seq": [
            {
                "name": "dense",
                "units": 193,
                "activation": "softplus"
            }
        ]
    }
}
